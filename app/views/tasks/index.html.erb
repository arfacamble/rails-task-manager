<h1>My tasks</h1>
<ul style="list-style: none">
  <% @tasks.each do |task| %>
    <% if task.completed %>
      <li><input type="checkbox" disabled checked><%= link_to task.title, task_path(task) %></li>
    <% else %>
      <li><input type="checkbox" disabled><%= link_to task.title, task_path(task) %></li>
    <% end %>
    <%= link_to 'ðŸ—‘', task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
  <% end %>
</ul>
