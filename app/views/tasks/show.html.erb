<h1><%= @task.title %></h1>
<%= link_to "Edit this task", edit_path %>
<div class="description">
  <p><%= @task.details %></p>
</div>
<div class="completion">
  <% if @task.completed %>
    <input type="checkbox" disabled checked><span>This task is completed</span>
  <% else %>
    <input type="checkbox" disabled><span>This task is not yet completed</span>
  <% end %>
</div>

<%= link_to "Back to list", tasks_path %>
